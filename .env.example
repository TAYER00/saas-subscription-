# Configuration Django
DJANGO_SETTINGS_MODULE=config.settings.dev
SECRET_KEY=your-very-secret-key-here-change-this-in-production
DEBUG=True

# Base de données PostgreSQL (Production)
DB_NAME=saas_subscription_db
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Configuration Email (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yoursite.com

# Redis (Production)
REDIS_URL=redis://localhost:6379/1

# Sécurité (Production)
ALLOWED_HOSTS=localhost,127.0.0.1,yoursite.com,www.yoursite.com
CSRF_TRUSTED_ORIGINS=https://yoursite.com,https://www.yoursite.com

# CORS (si nécessaire pour API)
CORS_ALLOWED_ORIGINS=https://yourfrontend.com,https://www.yourfrontend.com

# Monitoring (Optionnel)
SENTRY_DSN=your-sentry-dsn-here

# Stockage de fichiers (Optionnel)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=eu-west-1

# Variables spécifiques à l'application
SITE_NAME=SaaS Subscription Platform
SITE_URL=https://yoursite.com
COMPANY_NAME=Your Company Name
SUPPORT_EMAIL=support@yoursite.com

# Limites par défaut
DEFAULT_MAX_USERS=10
DEFAULT_MAX_PROJECTS=5
DEFAULT_STORAGE_LIMIT=1

# Configuration de cache
CACHE_TTL=300

# Configuration de session
SESSION_COOKIE_AGE=86400
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True